<?xml version='1.0' encoding='utf-8'?>
<widget id="com.betchicago.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>BetChicago</name>
    <description>
        Your source for all of Chicago sports and betting news.
    </description>
    <author email="webmaster@betchicago.com" href="https://www.betchicago.com">
        Bet Chicago Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="res/icon/android/icon-36-ldpi.png" />
        <icon density="mdpi" src="res/icon/android/icon-48-mdpi.png" />
        <icon density="hdpi" src="res/icon/android/icon-72-hdpi.png" />
        <icon density="xhdpi" src="res/icon/android/icon-96-xhdpi.png" />
        <icon density="xxhdpi" src="res/icon/android/icon-144.png" />
        <icon density="xxxhdpi" src="res/icon/android/icon-192.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon height="180" src="res/icon/ios/apple-icon-180x180.png" width="180" />
        <icon height="60" src="res/icon/ios/apple-icon-60x60.png" width="60" />
        <icon height="120" src="res/icon/ios/apple-icon-120x120.png" width="120" />
        <icon height="76" src="res/icon/ios/apple-icon-76x76.png" width="76" />
        <icon height="152" src="res/icon/ios/apple-icon-152x152.png" width="152" />
        <icon height="57" src="res/icon/ios/apple-icon-57x57.png" width="57" />
        <icon height="114" src="res/icon/ios/apple-icon-114x114.png" width="114" />
        <icon height="72" src="res/icon/ios/apple-icon-72x72.png" width="72" />
        <icon height="144" src="res/icon/ios/apple-icon-144x144.png" width="144" />
        <icon height="167" src="res/icon/ios/apple-icon-167x167.png" width="167" />
    </platform>
    <plugin name="cordova-plugin-dialogs" spec="^2.0.1" />
    <plugin name="cordova-plugin-network-information" spec="^2.0.1" />
    <allow-navigation href="https://www.betchicago.com/*" />
    <engine name="android" spec="^7.0.0" />
    <engine name="ios" spec="^4.5.4" />
</widget>
